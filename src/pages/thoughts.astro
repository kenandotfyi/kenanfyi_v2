        display: flex;
        flex-direction: column;
        gap: 0.2rem;
        flex: 1;
    }

    .post-item {
        text-decoration: none;
    }

    .title-text {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text);
        font-size: clamp(1.1rem, 2vw, 2rem);
        font-family: var(--font-serif);
        line-height: 1.2;
    }

    .title-icon {
        display: flex;
        align-items: center;
        flex-shrink: 0;
        opacity: 0.5;
    }

    .post-item:hover .title-icon {
        opacity: 1;
    }

    .post-item:hover .title-text {
        color: var(--accent);
    }

    .title-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

