        margin-left: calc(50% - 50vw);
        margin-right: calc(50% - 50vw);
    }

    .sort-controls {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        padding: 0.5rem 4vw;
        font-family: var(--font-mono);
        font-size: 0.75rem;
        color: var(--text-muted);
    }

    .sort-label {
        opacity: 0.5;
    }

    .sep {
        opacity: 0.3;
    }

    .sort-btn {
        background: none;
        border: none;
        cursor: pointer;
        font-family: inherit;
        font-size: inherit;
        color: inherit;
        padding: 0;
        letter-spacing: 0.05em;
        opacity: 0.5;
    }

    .sort-btn.active {
