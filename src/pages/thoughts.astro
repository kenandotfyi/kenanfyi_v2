        display: flex;
        gap: 0.75rem;

        font-size: 0.8rem;
        color: var(--text-muted);
        opacity: 0.6;
        font-family: var(--font-mono);
        text-decoration: none;
        transition: all 0.2s ease;
    }

    .tag:hover {
        color: var(--accent);
        opacity: 1;
    }

    @media (max-width: 768px) {
        .hero-text {
            font-size: 2.5rem;
        }

        .hero-section {
            height: 30vh;
            margin-top: -10px;
            min-height: 300px;
        }

        .post-item {
            gap: 1rem;
            padding: 0.75rem 1rem;
        }
