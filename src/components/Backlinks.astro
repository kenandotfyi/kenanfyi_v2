---
import { getBacklinks } from "../lib/backlinks.ts";

interface Props {
    id: string;
}

const { id } = Astro.props;
const backlinks = await getBacklinks(id);
---

{
    backlinks.length > 0 && (
        <div class="backlinks">
            <span class="backlinks-heading">Backlinks</span>
            <ul>
                {backlinks.map((post) => (
                    <li>
                        <a href={`/${post.collection}/${post.id}`}>
                            {post.data.title}
                        </a>
                    </li>
                ))}
            </ul>
        </div>
    )
}

<style>
    .backlinks {
        margin-top: calc(var(--q) * 16);
        padding: calc(var(--q) * 5) calc(var(--q) * 6);
        border: 2px solid var(--accent-hover);
        background: var(--bg-deep);
        max-width: 65ch;
    }

    .backlinks-heading {
        display: block;
        font-family: var(--font-mono);
        font-size: var(--text-sm);
        text-transform: uppercase;
        letter-spacing: 0.12em;
        color: var(--accent);
        margin-bottom: calc(var(--q) * 3);
    }

    .backlinks ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: calc(var(--q) * 2);
    }

    .backlinks li a {
        font-size: var(--text-sm);
        color: var(--fg-secondary);
        text-decoration-color: var(--border-default);
    }

    .backlinks li a:hover {
        color: var(--fg-bright);
    }
</style>
