---
import { getBacklinks } from "../lib/backlinks.ts";

interface Props {
    id: string;
}

const { id } = Astro.props;
const backlinks = await getBacklinks(id);
---

<div class="backlinks">
    {
        backlinks.length > 0 ? (
            <ul>
                {backlinks.map((post) => (
                    <li>
                        <a href={`/${post.collection}/${post.id}`}>
                            {post.data.title}
                        </a>
                    </li>
                ))}
            </ul>
        ) : (
            <p>No backlinks!</p>
        )
    }
</div>

<style>
    .backlinks {
    }

    .backlinks h2 {
        font-size: 1rem;
        margin-block-end: 1rem;
    }

    .backlinks ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .backlinks li {
        margin-block-end: 0.5rem;
    }

    .collection-tag {
        font-size: 0.75rem;
        color: var(--text-muted, #666);
        margin-inline-start: 0.5rem;
    }
</style>
