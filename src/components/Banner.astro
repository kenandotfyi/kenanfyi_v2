---
const { metadata } = Astro.props;
---

<div class="banner">
    <h3>{metadata.published}</h3>
    <h1>{metadata.title}</h1>
    <h2>{metadata.description}</h2>
</div>

<style>
    * {
        color: white;
    }

    .banner {
        background-color: var(--banner-bg);
        box-shadow: inset 0 0 0 1px #525252;
        border-width: 0px 1px 0px 1px;
        border-style: solid;
        border-color: var(--main-border);
        height: 200px;
        padding-top: 16px;
    }

    h1,
    h2,
    h3 {
        padding: 0;
        margin-left: 12px;
    }

    h1 {
        display: inline;
        font-family: "Kode Mono Variable";
        background-color: rgba(197, 68, 31, 0.75);
        box-shadow: inset 0 0 0 1px var(--orange);
        padding-right: 10px;
        padding-left: 10px;
    }

    h3 {
        font-family: "Kode Mono Variable";
    }
</style>
