---
const year = new Date().getFullYear();
---

<footer>
    <div class="footer-content">
        <span>kenan.fyi</span>
        <span class="sep">/</span>
        <span>{year}</span>
        <span class="sep">/</span>
        <span>CC BY-NC-SA 4.0</span>
    </div>
</footer>

<style>
    footer {
        border-top: 1px solid var(--panel-border);
        padding: calc(var(--q) * 6) 0;
        margin-top: auto;
        margin-left: calc(50% - 50vw);
        margin-right: calc(50% - 50vw);
    }

    .footer-content {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        font-size: 0.75rem;
        color: var(--text-muted);
    }

    .sep {
        opacity: 0.3;
    }
</style>
